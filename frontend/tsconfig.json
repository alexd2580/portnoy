{
    "compilerOptions": {
        "sourceMap": true,
        "module": "esnext",
        "moduleResolution": "Node",
        "target": "ES2017",
        "lib": [
            "es2019",
            "DOM"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "preserveWatchOutput": true,
        "pretty": true,
        "stripInternal": true,
        "incremental": true,
        "useDefineForClassFields": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./dist/**/*"
    ]
}
